    "@typescript-eslint/parser": "^5.46.1",
    "@vitejs/plugin-vue": "^4.0.0",
    "commitizen": "^4.2.6",
    "cz-conventional-changelog": "^3.3.0",
    "dart-sass": "^1.25.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
